<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pet Haven Hub - <%= @pet.persisted? ? 'Edit Pet' : 'Add New Pet' %></title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
  <style>
    /* Custom styles to enhance Tailwind */
    .fade-in { animation: fadeIn 0.5s ease-in; }
    @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    
    .btn-hover:hover { transform: translateY(-2px); transition: transform 0.2s ease; }
    .card-hover:hover { box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04); }
    
    .form-select-bg { background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e"); }
    
    /* Custom focus styles */
    .custom-focus:focus {
      outline: none;
      ring-width: 3px;
      ring-color: rgba(99, 102, 241, 0.3);
    }
    
    /* Status color badges */
    .status-available { background-color: #d1fae5; color: #065f46; }
    .status-pending { background-color: #fef3c7; color: #92400e; }
    .status-adopted { background-color: #dbeafe; color: #1e40af; }
  </style>
</head>
<body class="bg-gradient-to-br from-blue-50 to-indigo-50 min-h-screen">
  <div class="container max-w-4xl mx-auto py-8 px-4 fade-in">
    <!-- Header with back button -->
    <div class="flex items-center justify-between mb-8">
      <div>
        <a href="/admin/pets" class="inline-flex items-center text-indigo-600 hover:text-indigo-800 mb-2">
          <i class="fas fa-arrow-left mr-2"></i> Back to Pets
        </a>
        <h1 class="text-4xl font-bold text-gray-900">
          <i class="fas fa-paw mr-3 text-indigo-500"></i>
          <%= @pet.persisted? ? 'Edit Pet Profile' : 'Add New Pet' %>
        </h1>
        <p class="text-gray-600 mt-2">
          <%= @pet.persisted? ? 'Update pet information below' : 'Fill in the details to add a new pet to the adoption center' %>
        </p>
      </div>
      
      <% if @pet.persisted? && @pet.image.present? && @pet.image.url %>
        <div class="hidden md:block">
          <div class="w-20 h-20 rounded-full overflow-hidden border-4 border-white shadow-lg">
            <%= image_tag @pet.image.url, alt: @pet.name, class: 'w-full h-full object-cover' %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="bg-white rounded-2xl shadow-xl overflow-hidden card-hover transition-all duration-300">
      <!-- Form header with tabs (optional) -->
      <div class="border-b border-gray-200">
        <div class="px-8 py-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-12 h-12 bg-indigo-100 rounded-xl flex items-center justify-center">
                <i class="fas fa-pen text-indigo-600 text-xl"></i>
              </div>
            </div>
            <div class="ml-4">
              <h2 class="text-2xl font-bold text-gray-900">Pet Information</h2>
              <p class="text-gray-600">All fields marked with <span class="text-red-500">*</span> are required</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Form content -->
      <div class="p-8">
        <% if @pet.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-6 rounded-lg mb-8 transform transition-all duration-300 hover:shadow-md">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-triangle text-red-500 text-2xl"></i>
              </div>
              <div class="ml-4">
                <h3 class="text-lg font-bold text-red-800">
                  <%= pluralize(@pet.errors.count, 'error') %> prohibited this pet from being saved:
                </h3>
                <ul class="mt-3 list-disc list-inside text-red-700 space-y-1">
                  <% @pet.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <%= form_with model: [:admin, @pet], local: true, multipart: true, authenticity_token: true, class: 'space-y-10' do |f| %>
          <!-- Basic Information Section -->
          <div class="border-b border-gray-200 pb-10">
            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <i class="fas fa-id-card mr-3 text-indigo-500"></i>
              Basic Information
            </h3>
            
            <!-- Pet Name -->
            <div class="mb-8">
              <%= f.label :name, 'Pet Name <span class="text-red-500">*</span>'.html_safe, class: 'block text-lg font-semibold text-gray-900 mb-3' %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-dog text-gray-400"></i>
                </div>
                <%= f.text_field :name, placeholder: 'Enter pet name (e.g., Max, Luna, Charlie)', 
                    class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-all duration-200 custom-focus' %>
              </div>
              <p class="text-gray-500 text-sm mt-2 ml-1">Give your pet a friendly name</p>
            </div>

            <!-- Species & Breed -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
              <div>
                <%= f.label :pet_type, 'Species <span class="text-red-500">*</span>'.html_safe, class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-paw text-gray-400"></i>
                  </div>
                  <%= f.select :pet_type, 
                      [['Select species', ''], ['ðŸ¶ Dog', 'dog'], ['ðŸ± Cat', 'cat'], ['ðŸ° Rabbit', 'rabbit'], ['ðŸ¦ Bird', 'bird'], ['ðŸ¾ Other', 'other']], 
                      {}, 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 appearance-none bg-white form-select-bg bg-right bg-no-repeat pr-10 custom-focus' %>
                </div>
              </div>
              <div>
                <%= f.label :breed, 'Breed', class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-dna text-gray-400"></i>
                  </div>
                  <%= f.text_field :breed, placeholder: 'e.g., Golden Retriever, Siamese, etc.', 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-all duration-200 custom-focus' %>
                </div>
              </div>
            </div>

            <!-- Age & Size -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
              <div>
                <%= f.label :age, 'Age (in years)', class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-birthday-cake text-gray-400"></i>
                  </div>
                  <%= f.number_field :age, placeholder: '0.5', 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-all duration-200 custom-focus', step: 0.1 %>
                </div>
                <p class="text-gray-500 text-sm mt-2 ml-1">Use decimals for months (0.5 = 6 months)</p>
              </div>
              <div>
                <%= f.label :size, 'Size <span class="text-red-500">*</span>'.html_safe, class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-weight text-gray-400"></i>
                  </div>
                  <%= f.select :size, 
                      [['Select size', ''], ['Small (up to 20 lbs)', 'small'], ['Medium (21-60 lbs)', 'medium'], ['Large (61+ lbs)', 'large']], 
                      {}, 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 appearance-none bg-white form-select-bg bg-right bg-no-repeat pr-10 custom-focus' %>
                </div>
              </div>
            </div>

            <!-- Sex & Health Status -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <%= f.label :sex, 'Sex <span class="text-red-500">*</span>'.html_safe, class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-venus-mars text-gray-400"></i>
                  </div>
                  <%= f.select :sex, 
                      [['Select sex', ''], ['Male', 'male'], ['Female', 'female']], 
                      {}, 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 appearance-none bg-white form-select-bg bg-right bg-no-repeat pr-10 custom-focus' %>
                </div>
              </div>
              <div>
                <%= f.label :health_status, 'Health Status', class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-heartbeat text-gray-400"></i>
                  </div>
                  <%= f.text_field :health_status, placeholder: 'e.g., Excellent, Good, Fair, Needs Care', 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-all duration-200 custom-focus' %>
                </div>
              </div>
            </div>
          </div>

          <!-- Health & Status Section -->
          <div class="border-b border-gray-200 pb-10">
            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <i class="fas fa-heart mr-3 text-pink-500"></i>
              Health & Status
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
              <!-- Checkboxes styled as cards -->
              <div class="bg-gray-50 p-6 rounded-2xl border-2 border-gray-100 hover:border-indigo-200 transition-all duration-200">
                <div class="flex items-start">
                  <%= f.check_box :vaccinated, { class: 'mt-1 w-6 h-6 text-indigo-600 rounded border-2 border-gray-300 focus:ring-indigo-500' }, 'true', 'false' %>
                  <div class="ml-4">
                    <%= f.label :vaccinated, class: 'text-lg font-bold text-gray-900' do %>
                      <div class="flex items-center">
                        <i class="fas fa-syringe text-green-500 mr-2"></i>
                        Vaccinated
                      </div>
                    <% end %>
                    <p class="text-gray-600 mt-2 text-sm">Pet has received all required vaccinations</p>
                  </div>
                </div>
              </div>
              
              <div class="bg-gray-50 p-6 rounded-2xl border-2 border-gray-100 hover:border-indigo-200 transition-all duration-200">
                <div class="flex items-start">
                  <%= f.check_box :available, { class: 'mt-1 w-6 h-6 text-indigo-600 rounded border-2 border-gray-300 focus:ring-indigo-500' }, 'true', 'false' %>
                  <div class="ml-4">
                    <%= f.label :available, class: 'text-lg font-bold text-gray-900' do %>
                      <div class="flex items-center">
                        <i class="fas fa-home text-blue-500 mr-2"></i>
                        Available for Adoption
                      </div>
                    <% end %>
                    <p class="text-gray-600 mt-2 text-sm">Pet is ready to find a forever home</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Status Dropdown -->
            <div>
              <%= f.label :status, 'Adoption Status <span class="text-red-500">*</span>'.html_safe, class: 'block text-lg font-semibold text-gray-900 mb-3' %>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <i class="fas fa-flag text-gray-400"></i>
                </div>
                <%= f.select :status, 
                    [['Select status', '']] + Pet.statuses.keys.map { |s| [s.titleize, s] }, 
                    {}, 
                    class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 appearance-none bg-white form-select-bg bg-right bg-no-repeat pr-10 custom-focus' %>
              </div>
            </div>
          </div>

          <!-- Description Section -->
          <div class="border-b border-gray-200 pb-10">
            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <i class="fas fa-file-alt mr-3 text-yellow-500"></i>
              Description & Story
            </h3>
            
            <div>
              <%= f.label :description, 'Tell us about this pet', class: 'block text-lg font-semibold text-gray-900 mb-3' %>
              <div class="relative">
                <div class="absolute top-4 left-4">
                  <i class="fas fa-pen text-gray-400"></i>
                </div>
                <%= f.text_area :description, rows: 6, placeholder: "Describe the pet's personality, history, special needs, and anything that would help potential adopters understand them better...", 
                    class: 'pl-12 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-all duration-200 custom-focus resize-none' %>
              </div>
              <p class="text-gray-500 text-sm mt-2 ml-1">A good description increases adoption chances by 40%</p>
            </div>
          </div>

          <!-- Image Upload Section -->
          <div class="border-b border-gray-200 pb-10">
            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <i class="fas fa-camera mr-3 text-purple-500"></i>
              Photos
            </h3>
            
            <div>
              <%= f.label :image, 'Pet Image', class: 'block text-lg font-semibold text-gray-900 mb-3' %>
              
              <div class="mt-4">
                <% if @pet.image.present? && @pet.image.url %>
                  <div class="mb-6">
                    <p class="text-gray-700 font-medium mb-4">Current Image:</p>
                    <div class="flex flex-wrap gap-6">
                      <div class="relative group">
                        <div class="w-48 h-48 rounded-2xl overflow-hidden shadow-lg">
                          <%= image_tag @pet.image.url, alt: @pet.name, class: 'w-full h-full object-cover group-hover:scale-110 transition-transform duration-300' %>
                        </div>
                        <div class="absolute top-3 right-3 bg-white rounded-full p-2 shadow-md opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                          <i class="fas fa-check text-green-500"></i>
                        </div>
                      </div>
                    </div>
                  </div>
                <% end %>

                <!-- File Upload Area -->
                <div class="mt-6">
                  <div class="border-3 border-dashed border-gray-300 rounded-2xl p-8 text-center hover:border-indigo-400 hover:bg-indigo-50 transition-all duration-300">
                    <i class="fas fa-cloud-upload-alt text-4xl text-gray-400 mb-4"></i>
                    <h4 class="text-xl font-bold text-gray-900 mb-2">Upload a new photo</h4>
                    <p class="text-gray-600 mb-6">Drag & drop or click to browse</p>
                    
                    <div class="flex justify-center">
                      <label class="cursor-pointer">
                        <div class="px-8 py-3 bg-indigo-600 text-white font-semibold rounded-xl hover:bg-indigo-700 transition-all duration-200 btn-hover shadow-md">
                          <i class="fas fa-folder-open mr-2"></i> Choose File
                          <%= f.file_field :image, accept: 'image/*', class: 'hidden' %>
                        </div>
                      </label>
                    </div>
                    
                    <p class="text-gray-500 text-sm mt-6">
                      <i class="fas fa-info-circle mr-1"></i>
                      Max 5MB. Supported formats: JPG, PNG, GIF, WebP
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Location Section -->
          <div class="pb-10">
            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
              <i class="fas fa-map-marker-alt mr-3 text-red-500"></i>
              Location
            </h3>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
              <div>
                <%= f.label :city, 'City', class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-city text-gray-400"></i>
                  </div>
                  <%= f.text_field :city, placeholder: 'e.g., New York, Los Angeles', 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-all duration-200 custom-focus' %>
                </div>
              </div>
              <div>
                <%= f.label :country, 'Country', class: 'block text-lg font-semibold text-gray-900 mb-3' %>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <i class="fas fa-globe text-gray-400"></i>
                  </div>
                  <%= f.text_field :country, placeholder: 'e.g., USA, Canada, UK', 
                      class: 'pl-10 w-full px-5 py-4 border-2 border-gray-200 rounded-xl focus:outline-none focus:border-indigo-500 focus:ring-2 focus:ring-indigo-100 transition-all duration-200 custom-focus' %>
                </div>
              </div>
            </div>

            <div class="bg-blue-50 p-6 rounded-2xl border-2 border-blue-100">
              <h4 class="font-bold text-blue-900 mb-3 flex items-center">
                <i class="fas fa-map-pin mr-2"></i>
                Coordinates (Optional)
              </h4>
              <p class="text-blue-700 text-sm mb-6">These help display the pet on maps. Leave blank if unsure.</p>
              
              <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                <div>
                  <%= f.label :latitude, 'Latitude', class: 'block font-medium text-gray-900 mb-2' %>
                  <%= f.number_field :latitude, step: 0.0001, placeholder: '40.7128', 
                      class: 'w-full px-4 py-3 border-2 border-blue-100 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition-all duration-200 custom-focus' %>
                </div>
                <div>
                  <%= f.label :longitude, 'Longitude', class: 'block font-medium text-gray-900 mb-2' %>
                  <%= f.number_field :longitude, step: 0.0001, placeholder: '-74.0060', 
                      class: 'w-full px-4 py-3 border-2 border-blue-100 rounded-xl focus:outline-none focus:border-blue-500 focus:ring-2 focus:ring-blue-100 transition-all duration-200 custom-focus' %>
                </div>
              </div>
            </div>
          </div>

          <!-- Form Actions -->
          <div class="pt-8 border-t border-gray-200">
            <div class="flex flex-col md:flex-row justify-between items-center gap-6">
              <div class="text-gray-600">
                <i class="fas fa-shield-alt mr-2"></i>
                All information is secured and protected
              </div>
              
              <div class="flex gap-4">
                <%= link_to admin_pets_path, class: 'px-8 py-4 border-2 border-gray-300 text-gray-700 font-semibold rounded-xl hover:bg-gray-50 transition-all duration-200 btn-hover flex items-center' do %>
                  <i class="fas fa-times mr-2"></i> Cancel
                <% end %>
                
                <%= f.button type: 'submit', class: 'px-10 py-4 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-bold rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 btn-hover shadow-lg flex items-center' do %>
                  <% if @pet.persisted? %>
                    <i class="fas fa-save mr-3"></i> Update Pet Profile
                  <% else %>
                    <i class="fas fa-plus-circle mr-3"></i> Create New Pet
                  <% end %>
                <% end %>
              </div>
            </div>
            
            <% if @pet.persisted? %>
              <div class="mt-8 text-center text-gray-500 text-sm">
                <i class="fas fa-history mr-1"></i>
                Last updated: <%= @pet.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Help info at bottom -->
    <div class="mt-10 bg-gradient-to-r from-blue-100 to-indigo-100 rounded-2xl p-8 text-center">
      <h3 class="text-2xl font-bold text-gray-900 mb-4">Need help?</h3>
      <p class="text-gray-700 mb-6 max-w-2xl mx-auto">
        Contact our support team if you have questions about filling out this form or need assistance with pet profiles.
      </p>
      <a href="mailto:support@pethavenhub.com" class="inline-flex items-center px-6 py-3 bg-white text-indigo-700 font-semibold rounded-xl hover:shadow-md transition-all duration-200">
        <i class="fas fa-envelope mr-3"></i> support@pethavenhub.com
      </a>
    </div>
  </div>

  <script>
    // Simple form enhancement
    document.addEventListener('DOMContentLoaded', function() {
      // File upload preview
      const fileInput = document.querySelector('input[type="file"]');
      if (fileInput) {
        fileInput.addEventListener('change', function(e) {
          const fileName = e.target.files[0]?.name || 'No file chosen';
          const uploadArea = document.querySelector('.border-dashed');
          if (uploadArea) {
            const icon = uploadArea.querySelector('i.fa-cloud-upload-alt');
            const title = uploadArea.querySelector('h4');
            const subtitle = uploadArea.querySelector('p.text-gray-600');
            
            if (icon) icon.className = 'fas fa-check text-green-500 text-4xl mb-4';
            if (title) title.textContent = 'File Selected!';
            if (subtitle) subtitle.textContent = fileName;
            uploadArea.classList.add('border-green-400', 'bg-green-50');
            uploadArea.classList.remove('border-gray-300', 'hover:border-indigo-400', 'hover:bg-indigo-50');
          }
        });
      }
      
      // Add animation to form sections on scroll
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };
      
      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate__animated', 'animate__fadeInUp');
          }
        });
      }, observerOptions);
      
      // Observe form sections
      document.querySelectorAll('.border-b').forEach(section => {
        observer.observe(section);
      });
    });
  </script>
</body>
</html>