<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4 mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Manage Pets</h1>
      <p class="text-gray-600 text-sm mt-1">Total: <%= @total_pets %> | Available: <%= @available_pets %> | Unavailable: <%= @unavailable_pets %></p>
    </div>
    <%= link_to '+ Add New Pet', new_admin_pet_path, class: 'px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition' %>
  </div>

  <% if @pets.any? %>
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 border-b border-gray-200">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Image</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Name</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Species</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Breed</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Age</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Status</th>
              <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% @pets.each do |pet| %>
              <tr class="hover:bg-gray-50 transition">
                <td class="px-6 py-4">
                  <div class="w-12 h-12 rounded-lg overflow-hidden bg-gray-100">
                    <% if pet.image.present? && pet.image.url %>
                      <%= image_tag pet.image.url, alt: pet.name, class: 'w-full h-full object-cover' %>
                    <% else %>
                      <%= image_tag '/images/placeholder-pet.jpg', alt: 'placeholder', class: 'w-full h-full object-cover' %>
                    <% end %>
                  </div>
                </td>
                <td class="px-6 py-4 font-medium text-gray-900"><%= pet.name %></td>
                <td class="px-6 py-4 text-sm text-gray-600"><%= pet.pet_type&.titleize %></td>
                <td class="px-6 py-4 text-sm text-gray-600"><%= pet.breed %></td>
                <td class="px-6 py-4 text-sm text-gray-600"><%= pet.age %> yrs</td>
                <td class="px-6 py-4">
                  <% case pet.status %>
                  <% when 'available' %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">✓ Available</span>
                  <% when 'pending' %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">● Pending</span>
                  <% when 'adopted' %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-red-100 text-red-800">★ Adopted</span>
                  <% else %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-800"><%= pet.status.to_s.titleize %></span>
                  <% end %>
                </td>
                <td class="px-6 py-4 text-sm space-x-3 flex">
                  <%= link_to 'View', admin_pet_path(pet), class: 'text-indigo-600 hover:text-indigo-900 font-medium' %>
                  <%= link_to 'Edit', edit_admin_pet_path(pet), class: 'text-blue-600 hover:text-blue-900 font-medium' %>
                  <% if pet.status == 'adopted' %>
                    <%= link_to 'Make Available', mark_as_available_admin_pet_path(pet), method: :patch, data: { confirm: 'Make this pet available again?' }, class: 'text-green-600 hover:text-green-900 font-medium' %>
                  <% else %>
                    <%= link_to 'Mark Adopted', mark_as_adopted_admin_pet_path(pet), method: :patch, data: { confirm: 'Mark this pet as adopted?' }, class: 'text-red-600 hover:text-red-900 font-medium' %>
                  <% end %>
                  <%= link_to 'Delete', admin_pet_path(pet), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-900 font-medium' %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <!-- Pagination -->
      <% if @pets.respond_to?(:total_pages) %>
        <div class="px-6 py-4 border-t border-gray-200 bg-gray-50 flex justify-center">
          <%= paginate @pets, theme: 'bootstrap-4' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-12 text-center">
      <p class="text-gray-600 text-lg mb-4">No pets found. Create one to get started.</p>
      <%= link_to '+ Add New Pet', new_admin_pet_path, class: 'px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition' %>
    </div>
  <% end %>
</div>
