<style>
  .pet-show-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }
  
  .pet-header {
    margin-bottom: 2rem;
  }
  
  .pet-content-grid {
    display: grid;
    grid-template-columns: 1fr 500px;
    gap: 2.5rem;
    background: white;
    border-radius: 20px;
    padding: 2.5rem;
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  }
  
  .pet-info-section {
    display: flex;
    flex-direction: column;
  }
  
  .pet-image-section {
    position: relative;
  }
  
  .pet-main-image {
    width: 100%;
    height: 600px;
    border-radius: 20px;
    object-fit: cover;
    box-shadow: 0 8px 24px rgba(0,0,0,0.12);
  }
  
  .info-group {
    margin-bottom: 2rem;
  }
  
  .info-label {
    font-size: 0.875rem;
    font-weight: 700;
    color: #0D5F5C;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }
  
  .info-value {
    font-size: 1.125rem;
    color: #1F2937;
    font-weight: 500;
  }
  
  .action-buttons {
    display: flex;
    gap: 1rem;
    margin-top: auto;
    padding-top: 2rem;
    border-top: 2px solid #F3F4F6;
  }
  
  @media (max-width: 1024px) {
    .pet-content-grid {
      grid-template-columns: 1fr;
    }
    
    .pet-image-section {
      order: -1;
    }
    
    .pet-main-image {
      height: 400px;
    }
  }
</style>

<div class="pet-show-container">
  <!-- Header -->
  <div class="pet-header">
    <%= link_to '‚Üê Back to Pets', admin_pets_path, style: 'color: #0D5F5C; font-weight: 600; text-decoration: none; font-size: 0.9375rem; display: inline-block; margin-bottom: 1rem;' %>
    <h1 style="font-size: 3rem; font-weight: 800; color: #1F2937; margin-bottom: 0.5rem;"><%= @pet.name %></h1>
  </div>

  <!-- Main Content -->
  <div class="pet-content-grid">
    <!-- Left Side - Pet Information -->
    <div class="pet-info-section">
      <div class="info-group">
        <h3 class="info-label">Species</h3>
        <p class="info-value"><%= @pet.pet_type&.titleize || 'Unknown' %></p>
      </div>

      <div class="info-group">
        <h3 class="info-label">Breed</h3>
        <p class="info-value"><%= @pet.breed.presence || 'Mixed Breed' %></p>
      </div>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
        <div class="info-group" style="margin-bottom: 0;">
          <h3 class="info-label">Age</h3>
          <p class="info-value"><%= @pet.age %> <span style="font-size: 0.875rem; color: #6B7280;">year<%= @pet.age == 1 ? '' : 's' %></span></p>
        </div>

        <div class="info-group" style="margin-bottom: 0;">
          <h3 class="info-label">Size</h3>
          <p class="info-value"><%= @pet.size&.titleize || '‚Äî' %></p>
        </div>
      </div>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
        <div class="info-group" style="margin-bottom: 0;">
          <h3 class="info-label">Sex</h3>
          <p class="info-value"><%= @pet.sex&.titleize || '‚Äî' %></p>
        </div>

        <div class="info-group" style="margin-bottom: 0;">
          <h3 class="info-label">Status</h3>
          <% if @pet.available? %>
            <span style="display: inline-flex; align-items: center; padding: 0.5rem 1rem; border-radius: 10px; font-size: 0.9375rem; font-weight: 700; background: #D1FAE5; color: #065F46;">‚úì Available</span>
          <% else %>
            <span style="display: inline-flex; align-items: center; padding: 0.5rem 1rem; border-radius: 10px; font-size: 0.9375rem; font-weight: 700; background: #F3F4F6; color: #6B7280;">Adopted</span>
          <% end %>
        </div>
      </div>

      <% if @pet.health_status.present? %>
        <div class="info-group">
          <h3 class="info-label">Health Status</h3>
          <p class="info-value"><%= @pet.health_status %></p>
        </div>
      <% end %>

      <% if @pet.respond_to?(:vaccinated) %>
        <div class="info-group">
          <h3 class="info-label">Vaccinated</h3>
          <p class="info-value">
            <% if @pet.vaccinated %>
              <span style="color: #10B981; font-weight: 600;">‚úì Yes</span>
            <% else %>
              <span style="color: #EF4444; font-weight: 600;">‚úó No</span>
            <% end %>
          </p>
        </div>
      <% end %>

      <div class="info-group">
        <h3 class="info-label">Description</h3>
        <p style="font-size: 1rem; color: #4B5563; line-height: 1.7; white-space: pre-wrap;"><%= @pet.description.presence || 'No description provided.' %></p>
      </div>

      <% if @pet.location.present? %>
        <div class="info-group">
          <h3 class="info-label">üìç Location</h3>
          <p class="info-value"><%= @pet.location %></p>
        </div>
      <% end %>

      <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 2rem; margin-bottom: 2rem;">
        <div class="info-group" style="margin-bottom: 0;">
          <h3 class="info-label">Created</h3>
          <p style="font-size: 0.875rem; color: #6B7280;"><%= @pet.created_at.strftime('%B %-d, %Y') %></p>
        </div>

        <div class="info-group" style="margin-bottom: 0;">
          <h3 class="info-label">Last Updated</h3>
          <p style="font-size: 0.875rem; color: #6B7280;"><%= @pet.updated_at.strftime('%B %-d, %Y') %></p>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="action-buttons">
        <%= link_to 'Edit', edit_admin_pet_path(@pet), style: 'flex: 1; padding: 1rem; text-align: center; background: linear-gradient(135deg, #0D5F5C 0%, #0A4946 100%); color: white; font-weight: 700; border-radius: 12px; text-decoration: none; box-shadow: 0 4px 12px rgba(13, 95, 92, 0.3); transition: all 0.3s;' %>
        <%= link_to 'Delete', admin_pet_path(@pet), method: :delete, data: { confirm: 'Are you sure you want to delete this pet?' }, style: 'flex: 1; padding: 1rem; text-align: center; background: white; color: #EF4444; font-weight: 700; border: 2px solid #EF4444; border-radius: 12px; text-decoration: none; transition: all 0.3s;' %>
      </div>
    </div>

    <!-- Right Side - Pet Image -->
    <div class="pet-image-section">
      <% if @pet.image.present? && @pet.image.url %>
        <%= image_tag @pet.image.url, alt: @pet.name, class: 'pet-main-image' %>
      <% else %>
        <div class="pet-main-image" style="background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%); display: flex; flex-direction: column; align-items: center; justify-content: center; color: #9CA3AF;">
          <div style="font-size: 6rem; margin-bottom: 1rem;">üêæ</div>
          <p style="font-size: 1.125rem; font-weight: 600;">No image available</p>
        </div>
      <% end %>
      
      <% if @pet.available? %>
        <div style="position: absolute; top: 1.5rem; right: 1.5rem; background: #10B981; color: white; padding: 0.75rem 1.5rem; border-radius: 12px; font-weight: 700; box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4); font-size: 1rem;">
          ‚úì Available for Adoption
        </div>
      <% else %>
        <div style="position: absolute; top: 1.5rem; right: 1.5rem; background: #6B7280; color: white; padding: 0.75rem 1.5rem; border-radius: 12px; font-weight: 700; box-shadow: 0 4px 12px rgba(107, 114, 128, 0.4); font-size: 1rem;">
          Adopted
        </div>
      <% end %>
    </div>
  </div>
</div>
