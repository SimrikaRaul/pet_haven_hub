<div class="container mx-auto px-4 py-8">
  <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between mb-6 gap-4">
    <div class="flex items-center gap-4">
      <%= link_to '← Back to Pets', admin_pets_path, class: 'text-indigo-600 hover:underline' %>
      <h1 class="text-2xl sm:text-3xl font-semibold text-gray-900"> <%= @pet.name %> </h1>
    </div>

    <div class="flex items-center space-x-2">
      <%= link_to 'Edit', edit_admin_pet_path(@pet), class: 'px-4 py-2 bg-indigo-600 text-white text-sm font-medium rounded-md hover:bg-indigo-700' %>
      <%= link_to 'Delete', admin_pet_path(@pet), method: :delete, data: { confirm: 'Are you sure you want to delete this pet?' }, class: 'px-4 py-2 bg-red-600 text-white text-sm font-medium rounded-md hover:bg-red-700' %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <!-- Image -->
    <div class="w-full bg-gray-50">
      <% if @pet.image.present? && @pet.image.url %>
        <%= image_tag @pet.image.url, alt: @pet.name, class: 'w-full h-64 sm:h-80 object-cover' %>
      <% else %>
        <%= image_tag '/images/placeholder-pet.jpg', alt: 'Placeholder', class: 'w-full h-64 sm:h-80 object-cover' %>
      <% end %>
    </div>

    <!-- Details -->
    <div class="px-6 py-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h3 class="text-sm text-gray-500">Species</h3>
          <p class="mt-1 text-gray-900 font-medium"><%= @pet.pet_type&.titleize %></p>
        </div>

        <div>
          <h3 class="text-sm text-gray-500">Breed</h3>
          <p class="mt-1 text-gray-900 font-medium"><%= @pet.breed.presence || '—' %></p>
        </div>

        <div>
          <h3 class="text-sm text-gray-500">Age</h3>
          <p class="mt-1 text-gray-900 font-medium"><%= @pet.age %> <span class="text-sm text-gray-500">yrs</span></p>
        </div>

        <div>
          <h3 class="text-sm text-gray-500">Status</h3>
          <div class="mt-1">
            <% if @pet.available? %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">✓ Available</span>
            <% else %>
              <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">★ Adopted</span>
            <% end %>
          </div>
        </div>

        <div class="md:col-span-2">
          <h3 class="text-sm text-gray-500">Description</h3>
          <p class="mt-2 text-gray-700 whitespace-pre-wrap"><%= @pet.description.presence || 'No description provided.' %></p>
        </div>

        <div>
          <h3 class="text-sm text-gray-500">Created</h3>
          <p class="mt-1 text-gray-600 text-sm"><%= @pet.created_at.strftime('%B %-d, %Y') %></p>
        </div>

        <div>
          <h3 class="text-sm text-gray-500">Last updated</h3>
          <p class="mt-1 text-gray-600 text-sm"><%= @pet.updated_at.strftime('%B %-d, %Y') %></p>
        </div>
      </div>
    </div>
  </div>
</div>
