<nav class="navbar">
  <style>
    .navbar {
      background: white;
      color: #1F2937;
      padding: 16px 0;
      box-shadow: 0 2px 12px rgba(249, 115, 22, 0.1);
      position: sticky;
      top: 0;
      z-index: 1000;
      border-bottom: 2px solid #FED7AA;
    }

    .navbar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar-brand {
      font-size: 24px;
      font-weight: 800;
      display: flex;
      align-items: center;
      gap: 10px;
      color: #F97316;
      text-decoration: none;
    }

    .navbar-brand:hover {
      color: #EA580C;
    }

    .navbar-menu {
      display: flex;
      gap: 30px;
      align-items: center;
      list-style: none;
    }

    .navbar-menu a {
      color: #1F2937;
      text-decoration: none;
      font-weight: 500;
      font-size: 14px;
      transition: all 0.2s ease;
      padding: 8px 16px;
      border-radius: 20px;
    }

    .navbar-menu a:hover {
      background: linear-gradient(135deg, #FFE4D6 0%, #FED7AA 100%);
      color: #EA580C;
    }

    .navbar-auth {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .navbar-auth .btn {
      padding: 8px 16px;
      font-size: 13px;
      border-radius: 6px;
    }

    .navbar-auth .btn-outline {
      background: white;
      color: #F97316;
      border: 2px solid #F97316;
    }

    .navbar-auth .btn-outline:hover {
      background: #FFE4D6;
      border-color: #EA580C;
      color: #EA580C;
    }

    .navbar-auth .btn-primary {
      background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
      color: white;
      border: none;
      box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
    }

    .navbar-auth .btn-primary:hover {
      background: linear-gradient(135deg, #EA580C 0%, #C2410C 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(249, 115, 22, 0.4);
    }

    .user-menu {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .user-menu-item {
      color: #1F2937;
      padding: 8px 16px;
      border-radius: 20px;
      cursor: pointer;
      transition: background 0.2s ease;
      text-decoration: none;
    }

    .user-menu-item:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }

    .mobile-toggle {
      display: none;
      background: none;
      border: none;
      color: white;
      font-size: 24px;
      cursor: pointer;
    }

    @media (max-width: 768px) {
      .navbar-menu {
        display: none;
        flex-direction: column;
        gap: 0;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #1E40AF;
        width: 100%;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
      }

      .navbar-menu.active {
        display: flex;
      }

      .navbar-menu a {
        padding: 12px 20px;
        border-radius: 0;
      }

      .mobile-toggle {
        display: block;
      }

      .navbar-container {
        flex-wrap: wrap;
      }

      .navbar-auth {
        flex-wrap: wrap;
        width: 100%;
        gap: 8px;
      }

      .navbar-auth .btn {
        flex: 1;
        padding: 10px 12px;
        text-align: center;
      }
    }
  </style>

  <div class="navbar-container">
    <%= link_to root_path, class: 'navbar-brand' do %>
      üêæ Pet Haven Hub
    <% end %>

    <button class="mobile-toggle" onclick="toggleMobileMenu()">‚ò∞</button>

    <ul class="navbar-menu" id="navbar-menu">
      <li><%= link_to 'Home', root_path, data: { turbo_action: 'replace' } %></li>
      <li><%= link_to 'Browse Pets', pets_path, data: { turbo_action: 'replace' } %></li>
      <li><%= link_to 'My Requests', requests_path, class: user_signed_in? ? '' : 'hidden', data: { turbo_action: 'replace' } %></li>
      <li><%= link_to 'About', '#' %></li>
    </ul>

    <div class="navbar-auth">
      <% if user_signed_in? %>
        <div class="user-menu">
          <span class="user-menu-item" data-user-id="<%= current_user.id %>" data-user-email="<%= current_user.email %>"><%= current_user.full_name %></span>
          <%= link_to 'Profile', edit_user_registration_path, class: 'user-menu-item' %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'user-menu-item' %>
        </div>
      <% else %>
        <%= link_to 'Login', new_user_session_path, class: 'btn btn-outline' %>
        <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</nav>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('navbar-menu');
    menu.classList.toggle('active');
  }
</script>
