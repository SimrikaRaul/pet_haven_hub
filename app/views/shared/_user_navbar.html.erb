<nav class="navbar">
  <style>
    .navbar {
      background: white;
      color: #1F2937;
      padding: 16px 0;
      box-shadow: 0 2px 12px rgba(249, 115, 22, 0.1);
      position: sticky;
      top: 0;
      z-index: 1000;
      border-bottom: 2px solid #FED7AA;
    }

    .navbar-container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .navbar-brand {
      font-size: 24px;
      font-weight: 800;
      display: flex;
      align-items: center;
      gap: 10px;
      color: #F97316;
      text-decoration: none;
    }

    .navbar-brand:hover {
      color: #EA580C;
    }

    .navbar-menu {
      display: flex;
      gap: 30px;
      align-items: center;
      list-style: none;
    }

    .navbar-menu a {
      color: #1F2937;
      text-decoration: none;
      font-weight: 500;
      font-size: 14px;
      transition: all 0.2s ease;
      padding: 8px 16px;
      border-radius: 20px;
    }

    .navbar-menu a:hover {
      background: linear-gradient(135deg, #FFE4D6 0%, #FED7AA 100%);
      color: #EA580C;
    }

    .navbar-auth {
      display: flex;
      gap: 12px;
      align-items: center;
    }

    .navbar-auth .btn {
      padding: 8px 16px;
      font-size: 13px;
      border-radius: 6px;
    }

    .navbar-auth .btn-outline {
      background: white;
      color: #F97316;
      border: 2px solid #F97316;
    }

    .navbar-auth .btn-outline:hover {
      background: #FFE4D6;
      border-color: #EA580C;
      color: #EA580C;
    }

    .navbar-auth .btn-primary {
      background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
      color: white;
      border: none;
      box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
    }

    .navbar-auth .btn-primary:hover {
      background: linear-gradient(135deg, #EA580C 0%, #C2410C 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(249, 115, 22, 0.4);
    }

    .sign-in-dropdown {
      position: relative;
      display: inline-block;
    }

    .sign-in-button {
      background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
      color: white;
      padding: 10px 24px;
      font-size: 14px;
      font-weight: 600;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      display: flex;
      align-items: center;
      gap: 8px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 12px rgba(249, 115, 22, 0.3);
    }

    .sign-in-button:hover {
      background: linear-gradient(135deg, #EA580C 0%, #C2410C 100%);
      transform: translateY(-2px);
      box-shadow: 0 6px 16px rgba(249, 115, 22, 0.4);
    }

    .sign-in-button::after {
      content: '‚ñº';
      font-size: 10px;
      transition: transform 0.3s ease;
    }

    .sign-in-dropdown.active .sign-in-button::after {
      transform: rotate(180deg);
    }

    .dropdown-menu {
      position: absolute;
      top: calc(100% + 8px);
      right: 0;
      background: white;
      border-radius: 12px;
      box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
      min-width: 200px;
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s ease;
      z-index: 1000;
      overflow: hidden;
    }

    .sign-in-dropdown.active .dropdown-menu {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .dropdown-item {
      display: block;
      padding: 14px 20px;
      color: #1F2937;
      text-decoration: none;
      font-weight: 500;
      font-size: 14px;
      transition: all 0.2s ease;
      border-bottom: 1px solid #F3F4F6;
    }

    .dropdown-item:last-child {
      border-bottom: none;
    }

    .dropdown-item:hover {
      background: linear-gradient(135deg, #FFE4D6 0%, #FED7AA 100%);
      color: #C2410C;
      padding-left: 24px;
    }

    .dropdown-item.create-account {
      background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
      color: white;
      font-weight: 600;
    }

    .dropdown-item.create-account:hover {
      background: linear-gradient(135deg, #EA580C 0%, #C2410C 100%);
      padding-left: 20px;
    }

    .user-menu {
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .user-menu-item {
      color: #1F2937;
      padding: 8px 16px;
      border-radius: 20px;
      cursor: pointer;
      transition: background 0.2s ease;
      text-decoration: none;
    }

    .user-menu-item:hover {
      background-color: rgba(255, 255, 255, 0.1);
    }

    .mobile-toggle {
      display: none;
      background: none;
      border: none;
      color: white;
      font-size: 24px;
      cursor: pointer;
    }

    @media (max-width: 768px) {
      .navbar-menu {
        display: none;
        flex-direction: column;
        gap: 0;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        background: #1E40AF;
        width: 100%;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
      }

      .navbar-menu.active {
        display: flex;
      }

      .navbar-menu a {
        padding: 12px 20px;
        border-radius: 0;
      }

      .mobile-toggle {
        display: block;
      }

      .navbar-container {
        flex-wrap: wrap;
      }

      .navbar-auth {
        flex-wrap: wrap;
        width: 100%;
        gap: 8px;
      }

      .navbar-auth .btn {
        flex: 1;
        padding: 10px 12px;
        text-align: center;
      }
    }
  </style>

  <div class="navbar-container">
    <%= link_to root_path, class: 'navbar-brand' do %>
      üêæ Pet Haven Hub
    <% end %>

    <button class="mobile-toggle" onclick="toggleMobileMenu()">‚ò∞</button>

    <ul class="navbar-menu" id="navbar-menu">
      <li><%= link_to 'Home', root_path, data: { turbo_action: 'replace' } %></li>
      <li><%= link_to 'Browse Pets', pets_path, data: { turbo_action: 'replace' } %></li>
      <% if user_signed_in? %>
        <li><%= link_to 'My Requests', requests_path, data: { turbo_action: 'replace' } %></li>
      <% end %>
      <li><%= link_to 'About', '#' %></li>
    </ul>

    <div class="navbar-auth">
      <% if user_signed_in? %>
        <div class="user-menu">
          <span class="user-menu-item" data-user-id="<%= current_user.id %>" data-user-email="<%= current_user.email %>"><%= current_user.full_name %></span>
          <%= link_to 'Profile', edit_user_registration_path, class: 'user-menu-item' %>
          <%= link_to 'Logout', destroy_user_session_path, method: :delete, data: { turbo: false }, class: 'user-menu-item' %>
        </div>
      <% else %>
        <div class="sign-in-dropdown" id="signInDropdown">
          <button class="sign-in-button" onclick="toggleSignInDropdown()">
            üë§ Sign In
          </button>
          <div class="dropdown-menu">
            <%= link_to new_user_session_path, class: 'dropdown-item' do %>
              üîë Log In
            <% end %>
            <%= link_to new_user_registration_path, class: 'dropdown-item create-account' do %>
              ‚ú® Create Account
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>

<script>
  function toggleMobileMenu() {
    const menu = document.getElementById('navbar-menu');
    menu.classList.toggle('active');
  }

  function toggleSignInDropdown() {
    const dropdown = document.getElementById('signInDropdown');
    dropdown.classList.toggle('active');
  }

  // Close dropdown when clicking outside
  document.addEventListener('click', function(event) {
    const dropdown = document.getElementById('signInDropdown');
    if (dropdown && !dropdown.contains(event.target)) {
      dropdown.classList.remove('active');
    }
  });
</script>
