<footer class="footer">
  <style>
    .footer {
      background: linear-gradient(135deg, #1F2937 0%, #374151 100%);
      color: #E5E7EB;
      padding: 60px 20px 20px;
      margin-top: 80px;
      border-top: 3px solid #F97316;
    }

    .footer-container {
      max-width: 1200px;
      margin: 0 auto;
    }

    .footer-content {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 40px;
      margin-bottom: 40px;
    }

    .footer-section h3 {
      font-size: 18px;
      font-weight: 700;
      margin-bottom: 20px;
      color: white;
    }

    .footer-section ul {
      list-style: none;
    }

    .footer-section ul li {
      margin-bottom: 12px;
    }

    .footer-section a {
      color: #D1D5DB;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .footer-section a:hover {
      color: #F97316;
    }

    .footer-bottom {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding-top: 20px;
      border-top: 1px solid #374151;
      flex-wrap: wrap;
      gap: 20px;
    }

    .footer-copyright {
      color: #9CA3AF;
      font-size: 14px;
    }

    .footer-social {
      display: flex;
      gap: 16px;
    }

    .footer-social a {
      display: inline-block;
      width: 36px;
      height: 36px;
      background-color: #374151;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: background-color 0.2s ease;
    }

    .footer-social a:hover {
      background: linear-gradient(135deg, #F97316 0%, #EA580C 100%);
    }

    @media (max-width: 768px) {
      .footer-content {
        grid-template-columns: 1fr;
      }

      .footer-bottom {
        justify-content: center;
        text-align: center;
      }
    }
  </style>

