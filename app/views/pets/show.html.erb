<div class="container mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <div class="flex flex-col lg:flex-row">
      <!-- Left: Image gallery / main image -->
      <div class="lg:w-1/2 bg-gray-50">
        <div class="h-96 w-full overflow-hidden bg-gray-200 flex items-center justify-center">
          <% if @pet.image.present? && @pet.image.url %>
            <%= image_tag @pet.image.url, alt: @pet.name, class: 'w-full h-full object-cover' %>
          <% else %>
            <%= image_tag '/images/placeholder-pet.jpg', alt: @pet.name, class: 'w-full h-full object-cover' %>
          <% end %>
        </div>

        <%# Optional thumbnails row - suggest extracting into partial if needed %>
        <div class="p-4 border-t border-gray-100">
          <div class="flex items-center gap-3 overflow-x-auto">
            <%# If you have multiple photos implement thumbnails here. For now show a single thumbnail copy %>
            <div class="w-20 h-20 rounded-md overflow-hidden bg-gray-100 flex-shrink-0">
              <% if @pet.image.present? && @pet.image.url %>
                <%= image_tag @pet.image.url, alt: @pet.name, class: 'w-full h-full object-cover' %>
              <% else %>
                <%= image_tag '/images/placeholder-pet.jpg', alt: 'placeholder', class: 'w-full h-full object-cover' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Details + actions -->
      <div class="lg:w-1/2 p-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @pet.name %></h1>
        <p class="text-sm text-gray-600 mb-4">üìç <%= @pet.location %></p>

        <div class="grid grid-cols-2 gap-4 mb-6">
          <div class="bg-gray-50 border rounded-lg p-4">
            <p class="text-xs text-gray-500">Species</p>
            <p class="font-semibold text-gray-900"><%= @pet.pet_type.try(:capitalize) || '‚Äî' %></p>
          </div>
          <div class="bg-gray-50 border rounded-lg p-4">
            <p class="text-xs text-gray-500">Breed</p>
            <p class="font-semibold text-gray-900"><%= @pet.breed || '‚Äî' %></p>
          </div>
          <div class="bg-gray-50 border rounded-lg p-4">
            <p class="text-xs text-gray-500">Age</p>
            <p class="font-semibold text-gray-900"><%= @pet.age %> yrs</p>
          </div>
          <div class="bg-gray-50 border rounded-lg p-4">
            <p class="text-xs text-gray-500">Size</p>
            <p class="font-semibold text-gray-900"><%= @pet.size || '‚Äî' %></p>
          </div>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-2">Health & Details</h3>
          <ul class="space-y-2 text-sm text-gray-700">
            <li><strong>Health:</strong> <%= @pet.health_status.presence || 'Not specified' %></li>
            <li><strong>Sex:</strong> <%= @pet.sex || 'Not specified' %></li>
            <li><strong>Vaccinated:</strong> <%= @pet.vaccinated ? 'Yes' : 'No' %></li>
          </ul>
        </div>

        <div class="mb-6">
          <h3 class="text-lg font-semibold text-gray-800 mb-2">About</h3>
          <p class="text-gray-700 leading-relaxed"><%= @pet.description.presence || 'A wonderful pet waiting for a loving home.' %></p>
        </div>

        <div class="flex flex-col sm:flex-row gap-3">
          <%= link_to 'Back to listings', pets_path, class: 'inline-flex justify-center items-center px-4 py-2 border rounded-md text-sm bg-white hover:bg-gray-50' %>

          <% if user_signed_in? %>
            <%= form_with url: pet_requests_path(@pet), method: :post, local: true do |f| %>
              <div class="flex gap-2 w-full">
                <%= f.hidden_field :request_type, value: 'adopt' %>
                <%= f.submit 'Request to Adopt', class: 'flex-1 inline-flex justify-center items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700' %>
              </div>
            <% end %>
          <% else %>
            <%= link_to 'Sign in to request', new_user_session_path, class: 'inline-flex justify-center items-center px-4 py-2 bg-indigo-600 text-white rounded-md hover:bg-indigo-700' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-6 text-center">
    <p class="text-sm text-gray-500">Listed on <%= l(@pet.created_at.to_date, format: :long) %></p>
  </div>
</div>
