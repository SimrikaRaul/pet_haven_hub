<style>
  .pet-show-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
  }
  
  .back-link-pet {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #0D5F5C;
    font-weight: 700;
    text-decoration: none;
    margin-bottom: 1.5rem;
    font-size: 1rem;
    transition: all 0.3s;
  }
  
  .back-link-pet:hover {
    gap: 0.75rem;
  }
  
  .pet-detail-card {
    background: white;
    border-radius: 30px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    overflow: hidden;
  }
  
  .pet-layout {
    display: grid;
    grid-template-columns: 550px 1fr;
    min-height: 700px;
  }
  
  .pet-image-section {
    background: linear-gradient(135deg, #E5E7EB 0%, #D1D5DB 100%);
    position: relative;
  }
  
  .pet-main-image-wrapper {
    width: 100%;
    height: 600px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .pet-main-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .pet-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    font-size: 6rem;
    color: #9CA3AF;
  }
  
  .availability-badge-show {
    position: absolute;
    top: 2rem;
    right: 2rem;
    padding: 0.875rem 1.75rem;
    border-radius: 12px;
    font-weight: 800;
    font-size: 1rem;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
    z-index: 10;
  }
  
  .badge-available-show {
    background: #10B981;
    color: white;
  }
  
  .badge-adopted-show {
    background: #6B7280;
    color: white;
  }
  
  .pet-thumbnails {
    padding: 1.5rem;
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    background: white;
  }
  
  .thumbnail {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    overflow: hidden;
    border: 3px solid #0D5F5C;
    flex-shrink: 0;
    cursor: pointer;
    transition: all 0.3s;
  }
  
  .thumbnail:hover {
    transform: scale(1.05);
    border-color: #F4A5B9;
  }
  
  .thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .pet-info-section {
    padding: 3rem;
    display: flex;
    flex-direction: column;
  }
  
  .pet-name-header {
    margin-bottom: 2rem;
  }
  
  .pet-name-title {
    font-size: 3.5rem;
    font-weight: 900;
    color: #0D5F5C;
    margin-bottom: 0.75rem;
    line-height: 1.1;
  }
  
  .pet-location-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6B7280;
    font-size: 1rem;
    font-weight: 600;
  }
  
  .quick-info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .info-box {
    background: linear-gradient(135deg, #E0F2F1 0%, #B2DFDB 100%);
    border-radius: 16px;
    padding: 1.25rem;
    border: 2px solid #B5D6D8;
  }
  
  .info-label {
    font-size: 0.75rem;
    font-weight: 700;
    color: #0D5F5C;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.5rem;
  }
  
  .info-value {
    font-size: 1.25rem;
    font-weight: 800;
    color: #1F2937;
  }
  
  .health-details-box {
    background: linear-gradient(135deg, #FFF5EB 0%, #FFE4D6 100%);
    border-radius: 20px;
    padding: 1.75rem;
    margin-bottom: 2rem;
    border: 2px solid #FED7AA;
  }
  
  .section-title {
    font-size: 1.375rem;
    font-weight: 800;
    color: #0D5F5C;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  .health-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .health-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9375rem;
  }
  
  .health-label {
    font-weight: 700;
    color: #0D5F5C;
    min-width: 100px;
  }
  
  .health-value {
    color: #4B5563;
    font-weight: 500;
  }
  
  .about-section {
    margin-bottom: 2rem;
  }
  
  .about-text {
    color: #4B5563;
    line-height: 1.8;
    font-size: 1rem;
    background: #F9FAFB;
    padding: 1.5rem;
    border-radius: 16px;
    border-left: 4px solid #0D5F5C;
  }
  
  .adoption-actions {
    margin-top: auto;
    padding-top: 2rem;
    border-top: 2px solid #E5E7EB;
  }
  
  .adopt-button {
    width: 100%;
    padding: 1.25rem 2rem;
    background: linear-gradient(135deg, #0D5F5C 0%, #0A4946 100%);
    color: white;
    font-weight: 800;
    font-size: 1.25rem;
    border: none;
    border-radius: 16px;
    cursor: pointer;
    box-shadow: 0 8px 24px rgba(13, 95, 92, 0.3);
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    text-decoration: none;
  }
  
  .adopt-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(13, 95, 92, 0.4);
  }
  
  .sign-in-button {
    width: 100%;
    padding: 1.25rem 2rem;
    background: linear-gradient(135deg, #F4A5B9 0%, #F48FAB 100%);
    color: white;
    font-weight: 800;
    font-size: 1.25rem;
    border: none;
    border-radius: 16px;
    cursor: pointer;
    box-shadow: 0 8px 24px rgba(244, 165, 185, 0.3);
    transition: all 0.3s;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.75rem;
    text-decoration: none;
  }
  
  .sign-in-button:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(244, 165, 185, 0.4);
  }
  
  .listing-info {
    text-align: center;
    margin-top: 2rem;
    color: #6B7280;
    font-size: 0.875rem;
  }
  
  @media (max-width: 1024px) {
    .pet-layout {
      grid-template-columns: 1fr;
    }
    
    .pet-main-image-wrapper {
      height: 400px;
    }
    
    .pet-info-section {
      padding: 2rem;
    }
    
    .pet-name-title {
      font-size: 2.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .quick-info-grid {
      grid-template-columns: 1fr;
    }
    
    .pet-name-title {
      font-size: 2rem;
    }
    
    .adopt-button, .sign-in-button {
      font-size: 1.125rem;
      padding: 1rem 1.5rem;
    }
  }
</style>

<div class="pet-show-container">
  <%= link_to pets_path, class: 'back-link-pet' do %>
    <span>‚Üê</span> Back to Browse Pets
  <% end %>
  
  <div class="pet-detail-card">
    <div class="pet-layout">
      <!-- Left: Image Section -->
      <div class="pet-image-section">
        <div class="pet-main-image-wrapper">
          <% if @pet.image.present? && @pet.image.url %>
            <%= image_tag @pet.image.url, alt: @pet.name, class: 'pet-main-image' %>
          <% else %>
            <div class="pet-placeholder">
              <div>üêæ</div>
              <div style="font-size: 1.25rem; margin-top: 1rem; color: #9CA3AF;">No image available</div>
            </div>
          <% end %>
        </div>
        
        <!-- Availability Badge -->
        <% if @pet.respond_to?(:available) %>
          <% if @pet.available %>
            <div class="availability-badge-show badge-available-show">
              ‚úì Available for Adoption
            </div>
          <% else %>
            <div class="availability-badge-show badge-adopted-show">
              Adopted
            </div>
          <% end %>
        <% end %>
        
        <!-- Thumbnails -->
        <div class="pet-thumbnails">
          <div class="thumbnail">
            <% if @pet.image.present? && @pet.image.url %>
              <%= image_tag @pet.image.url, alt: @pet.name %>
            <% else %>
              <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; background: #E5E7EB; font-size: 2rem;">üêæ</div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Right: Pet Information -->
      <div class="pet-info-section">
        <div class="pet-name-header">
          <h1 class="pet-name-title"><%= @pet.name %></h1>
          <% if @pet.location.present? %>
            <div class="pet-location-info">
              <svg style="width: 1.25rem; height: 1.25rem;" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
              </svg>
              <span><%= @pet.location %></span>
            </div>
          <% end %>
        </div>

        <!-- Quick Info Grid -->
        <div class="quick-info-grid">
          <div class="info-box">
            <div class="info-label">Species</div>
            <div class="info-value"><%= @pet.pet_type&.titleize || 'Pet' %></div>
          </div>
          <div class="info-box">
            <div class="info-label">Breed</div>
            <div class="info-value"><%= @pet.breed || 'Mixed' %></div>
          </div>
          <div class="info-box">
            <div class="info-label">Age</div>
            <div class="info-value"><%= @pet.age %> <%= @pet.age == 1 ? 'year' : 'years' %></div>
          </div>
          <div class="info-box">
            <div class="info-label">Size</div>
            <div class="info-value"><%= @pet.size&.titleize || 'Medium' %></div>
          </div>
        </div>

        <!-- Health & Details -->
        <div class="health-details-box">
          <h3 class="section-title">
            <span>ü©∫</span> Health & Details
          </h3>
          <div class="health-list">
            <div class="health-item">
              <span class="health-label">Health Status:</span>
              <span class="health-value"><%= @pet.health_status.presence || 'Healthy' %></span>
            </div>
            <div class="health-item">
              <span class="health-label">Sex:</span>
              <span class="health-value"><%= @pet.sex&.titleize || 'Not specified' %></span>
            </div>
            <div class="health-item">
              <span class="health-label">Vaccinated:</span>
              <span class="health-value">
                <% if @pet.respond_to?(:vaccinated) %>
                  <%= @pet.vaccinated ? '‚úÖ Yes' : '‚ùå No' %>
                <% else %>
                  Not specified
                <% end %>
              </span>
            </div>
          </div>
        </div>

        <!-- About Section -->
        <div class="about-section">
          <h3 class="section-title">
            <span>üìñ</span> About <%= @pet.name %>
          </h3>
          <div class="about-text">
            <%= @pet.description.presence || "#{@pet.name} is a wonderful companion looking for a loving forever home. This adorable pet has so much love to give and can't wait to meet their new family!" %>
          </div>
        </div>

        <!-- Adoption Actions -->
        <div class="adoption-actions">
          <% if user_signed_in? %>
            <%= form_with model: Request.new, url: pet_requests_path(@pet), method: :post, data: { turbo: false } do |f| %>
              <%= f.hidden_field :request_type, value: 'adopt' %>
              <%= f.submit "‚ù§Ô∏è Request to Adopt #{@pet.name}", class: 'adopt-button' %>
            <% end %>
          <% else %>
            <%= link_to 'üîë Sign In to Request Adoption', new_user_session_path, class: 'sign-in-button' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="listing-info">
    <p>Listed on <%= @pet.created_at.strftime('%B %-d, %Y') %> ‚Ä¢ Pet ID: #<%= @pet.id %></p>
  </div>
</div>
