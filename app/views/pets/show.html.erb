<div class="container py-8">
  <div class="flex flex-col md:flex-row gap-8">
    <!-- Pet Image & Info -->
    <div class="md:w-1/2">
      <div class="bg-white rounded-xl shadow-lg overflow-hidden mb-6">
        <div class="h-96 bg-gray-200 flex items-center justify-center">
          <%= image_tag 'https://placehold.co/600x400?text=' + @pet.name, alt: @pet.name, class: 'w-full h-full object-cover' %>
        </div>
      </div>

      <!-- Quick Stats -->
      <div class="grid grid-cols-2 gap-4 mb-6">
        <div class="bg-blue-50 rounded-lg p-4">
          <p class="text-sm text-gray-600">Species</p>
          <p class="text-xl font-bold text-gray-900"><%= @pet.pet_type %></p>
        </div>
        <div class="bg-green-50 rounded-lg p-4">
          <p class="text-sm text-gray-600">Breed</p>
          <p class="text-xl font-bold text-gray-900"><%= @pet.breed %></p>
        </div>
        <div class="bg-yellow-50 rounded-lg p-4">
          <p class="text-sm text-gray-600">Age</p>
          <p class="text-xl font-bold text-gray-900"><%= @pet.age %> yrs</p>
        </div>
        <div class="bg-purple-50 rounded-lg p-4">
          <p class="text-sm text-gray-600">Status</p>
          <p class="text-xl font-bold text-gray-900"><%= @pet.status %></p>
        </div>
      </div>
    </div>

    <!-- Details & Request Form -->
    <div class="md:w-1/2">
      <div class="bg-white rounded-xl shadow-lg p-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2"><%= @pet.name %></h1>
        <p class="text-lg text-gray-600 mb-6">üìç <%= @pet.location %></p>

        <!-- Details -->
        <div class="space-y-4 mb-8">
          <div class="border-b pb-4">
            <p class="text-sm text-gray-600">Health Status</p>
            <p class="font-semibold text-gray-900"><%= @pet.health_status || 'Not specified' %></p>
          </div>
          <div class="border-b pb-4">
            <p class="text-sm text-gray-600">Size</p>
            <p class="font-semibold text-gray-900"><%= @pet.size || 'Not specified' %></p>
          </div>
          <div class="border-b pb-4">
            <p class="text-sm text-gray-600">Sex</p>
            <p class="font-semibold text-gray-900"><%= @pet.sex || 'Not specified' %></p>
          </div>
          <div class="pb-4">
            <p class="text-sm text-gray-600">Vaccinated</p>
            <p class="font-semibold text-gray-900"><%= @pet.vaccinated ? '‚úì Yes' : '‚úó No' %></p>
          </div>
        </div>

        <!-- Description -->
        <div class="mb-8">
          <h3 class="text-lg font-bold text-gray-900 mb-2">About <%= @pet.name %></h3>
          <p class="text-gray-700 leading-relaxed">
            <%= @pet.description || 'A wonderful pet waiting for a loving home!' %>
          </p>
        </div>

        <!-- Request Form -->
        <% if user_signed_in? %>
          <div class="bg-gray-50 rounded-lg p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-4">Interested in <%= @pet.name %>?</h3>
            <%= form_with url: pet_requests_path(@pet), method: :post, local: true do |f| %>
              <div class="mb-4">
                <%= f.label :request_type, 'Request Type:' %>
                <%= f.select :request_type, [['Adopt', 'adopt'], ['Donate', 'donate']], {}, class: 'w-full px-3 py-2 border rounded-lg' %>
              </div>
              <div class="mb-4">
                <%= f.label :notes, 'Additional Info:' %>
                <%= f.text_area :notes, placeholder: 'Tell us about yourself or your interest...', class: 'w-full px-3 py-2 border rounded-lg h-24' %>
              </div>
              <%= f.submit 'Submit Request', class: 'btn btn-primary w-full' %>
            <% end %>
          </div>
        <% else %>
          <div class="bg-blue-50 rounded-lg p-6 text-center">
            <p class="text-gray-700 mb-4">Sign in to submit an adoption or donation request.</p>
            <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary' %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-outline' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Back Button -->
  <div class="mt-8">
    <%= link_to '‚Üê Back to Pets', pets_path, class: 'text-blue-600 hover:text-blue-800 font-semibold' %>
  </div>
</div>
